<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gouaultlucas.tp5.controleurs.CreerCompte">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Créer un compte bancaire">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Group layoutX="32.0" layoutY="65.0">
         <children>
            <Group>
               <children>
                  <Label layoutY="5.0" text="Numéro">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ChampNumeroCompte" layoutX="148.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </Group>
            <Group layoutY="53.0">
               <children>
                  <Label layoutY="5.0" text="Type de compte">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <ChoiceBox fx:id="ChampTypeCompte" layoutX="148.0" prefHeight="35.0" prefWidth="197.0" />
               </children>
            </Group>
            <Group layoutY="108.0">
               <children>
                  <Label layoutY="5.0" text="Solde">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ChampSolde" layoutX="148.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </Group>
            <Group layoutY="162.0">
               <children>
                  <Label layoutY="5.0" text="Taux de placement">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ChampTauxPlacement" layoutX="148.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </Group>
         </children>
      </Group>
      <Button fx:id="boutonCreerCompte" layoutX="180.0" layoutY="283.0" mnemonicParsing="false" onAction="#handleCreerCompte" prefHeight="35.0" prefWidth="197.0" text="Créer">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
